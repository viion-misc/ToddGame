{% set page = page ?? 'home' %}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">

        <title>{% block title %}Todds Crazy Game!{% endblock %}</title>

        {# CDN Resources #}
        <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.1/js/bootstrap.min.js"></script>

        {# Custom Resources #}
        <link rel="stylesheet" href="{{ asset('assets/css/app.css') }}">
        <script src="{{ asset('assets/js/app.js') }}"></script>

        {% block stylesheets %}{% endblock %}
    </head>
    <body>

            <nav class="nav-custom">
                <div class="container">
                    <a class="btn btn-{{ page == 'home' ? 'primary' : 'dark' }}" href="{{ path('home') }}">HOME</a>
                    <a class="btn btn-{{ page == 'season' ? 'primary' : 'dark' }}" href="{{ path('season') }}">SEASON</a>
                    <a class="btn btn-{{ page == 'players' ? 'primary' : 'dark' }}" href="{{ path('players') }}">PLAYERS</a>
                </div>
            </nav>

            <br><br><br>

            <div class="container">
                {% block body %}{% endblock %}
            </div>
        </div>
        {% block javascripts %}{% endblock %}
    </body>
</html>
